<odoo>
    <record id="view_cs_task_form" model="ir.ui.view">
        <field name="name">view.vcs.cs.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
           <xpath expr="//notebook/page[@name='extra_info']" position="after">
                <page name="carsharing" string="Carsharing">
                    <group col='2'>
                        <field name="cs_task_type" 
                            attrs="{'required':True}"
                         />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>