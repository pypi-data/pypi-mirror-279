<odoo>
    <template
        id="portal_my_details_fields"
        inherit_id="cooperator_portal.portal_my_details_fields"
    >
        <xpath expr="//input[@name='iban']/.." position="after">
            <t t-if="display_national_number">
                <div
                    t-attf-class="mb-3 #{error.get('national_number') and 'o_has_error' or ''} col-xl-6"
                >
                    <label
                        class="col-form-label"
                        for="national_number"
                    >National Number</label>
                    <input
                        type="text"
                        name="national_number"
                        t-attf-class="form-control #{error.get('national_number') and 'is-invalid' or ''}"
                        t-att-value="national_number"
                        placeholder="YY.MM.DD-NNN.CC"
                    />
                </div>
            </t>
        </xpath>
    </template>

    <!-- TODO: write portal_layout template -->
</odoo>
